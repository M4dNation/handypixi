{
  "name": "handypixi",
  "version": "1.4.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "compile": "babel lib -d src",
    "prepublishOnly": "npm run compile",
    "lint": "xo",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/M4dNation/handypixi.git"
  },
  "author": "m4dnation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/M4dNation/handypixi/issues"
  },
  "homepage": "https://github.com/M4dNation/handypixi#readme",
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "pixi-particles": "3.0.0",
    "pixi.js": "4.7.1"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.7.0",
    "uglify-js": "3.4.9",
    "xo": "0.24.0",
    "jest": "24.1.0"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "endOfLine": "lf"
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "rules": {
      "promise/prefer-await-to-then": "warn",
      "valid-jsdoc": "warn",
      "capitalized-comments": "warn",
      "curly": "warn"
    },
    "ignores": [
      "node_modules"
    ],
    "overrides": [
      {
        "files": [
          "tests/**"
        ],
        "globals": [
          "describe",
          "test",
          "expect",
          "afterEach",
          "beforeEach",
          "beforeAll",
          "jest",
          "jasmine"
        ]
      },
      {
        "files": [
          "lib/**"
        ],
        "globals": [
          "PIXI",
          "HTMLVideoElement",
          "HTMLCanvasElement",
          "HTMLCollection",
          "NodeList",
          "window",
          "WebGLRenderingContext"
        ]
      }
    ]
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "setupFiles": [
      "./tests/utils/client.js"
    ]
  }
}
